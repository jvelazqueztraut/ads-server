body{
	background-image: url(<%= asset_path 'background.jpg' %>);
	background-repeat:no-repeat;
	background-attachment:fixed;
	-webkit-background-size: cover;
	-moz-background-size: cover;
	-o-background-size: cover;
	background-size: cover;
}

.horizontally-aligned{
	margin-left:auto;
	margin-right:auto;
}
.top-bar{
	margin-top:20px;
	width:80%;
	padding-bottom:5px;
	border-bottom:2px solid #145b8c;
}

.sibyl-logo, .eurocase-logo{
	display:inline-block;
}

.sibyl-logo{
	width:45%;
}
.eurocase-logo{
	width:45%;
	text-align:right;
}

.container{
	padding:15px;
	margin-left:auto;
	margin-right:auto;
	height:100%;
	width: 80%;
}

.title{
	color:white;
}

label, .field-number{
	color: #939598;
}
.text-field{
	margin-top:7px;
	padding-left:20px;
	padding-right:20px;
	padding:5px;
	border-radius: 10px;
	width:200px;
}

.text-area{
	padding-left:10px;
	padding-right:20px;
	margin-top:7px;
	border-radius: 10px;
	width:440px;
	height:250px;
}

.picture-url-field, .destination-url-field{
	display:inline-block;
	padding:5px;
}

.destination-url-field{
	margin-left:13px;
	padding-left:20px;
	padding-right:20px;
}
.submit-btn{
	text-align:right;
	background-color:#880000;
	padding:10px;
	border-radius:5px;
	border: 1px solid #880000;
	color:white;
}

.ads-table{
	margin-left:auto;
	margin-right:auto;
	padding:10px;
	background-color:#B8B8B8;
	border-radius:10px;
	opacity:0.8;
}
.ads-thead{
	border-bottom:1px solid black;
}

.ads-tbody{
	padding-top:5px;
	padding-bottom:5px;
	border-bottom:1px solid #000;
}

.ads-tbody td{
	padding-top:7px;
	padding-bottom:7px;
	border-top: 1px solid black;
}

.ads-tbody td{
	padding-right:20px;
}